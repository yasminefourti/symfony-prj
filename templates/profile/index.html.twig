{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Mon Profil</h1>
    
    {% if user %}
        <div class="card">
            <div class="card-header">
                Informations personnelles
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> {{ user.id }}</p>

                {% if user.name is defined %}
                    <p><strong>Nom:</strong> {{ user.name }}</p>
                {% endif %}

                {% if user.email is defined %}
                    <p><strong>Email:</strong> {{ user.email }}</p>
                {% endif %}
                
                {% if user.password is defined %}
                    <p><strong>Mot de passe:</strong> ********</p> {# Ne jamais afficher le vrai mot de passe #}
                {% endif %}
                
                {% if user.role is defined %}
                    <p><strong>Rôle:</strong> {{ user.role }}</p>
                {% endif %}
            </div>
        </div>
        
        <div class="mt-3">
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Modifier mon profil</a>
            <a href="{{ path('app_profile_delete') }}" class="btn btn-danger" 
               onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?')">
                Supprimer mon compte
            </a>
        </div>
    {% else %}
        <div class="alert alert-warning">
            Vous devez être connecté pour voir votre profil.
        </div>
    {% endif %}
</div>
{% endblock %}
